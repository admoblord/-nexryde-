{
  "expo": {
    "name": "NEXRYDE",
    "slug": "nexryde",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "nexryde",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "extra": {
      "BACKEND_URL": "https://nexryde-ui.emergent.host/api"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nexryde.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "NEXRYDE needs your location to find nearby drivers and calculate fares",
        "NSLocationAlwaysUsageDescription": "NEXRYDE needs your location to track trips in the background",
        "NSCameraUsageDescription": "NEXRYDE needs camera access for document verification"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0D1420"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.nexryde.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "NEXRYDE needs your location to find nearby drivers and track trips"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0D1420"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
