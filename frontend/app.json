{
  "expo": {
    "name": "KODA",
    "slug": "koda",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "koda",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.koda.driver",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "KODA needs your location to find nearby drivers and calculate fares",
        "NSLocationAlwaysUsageDescription": "KODA needs your location to track trips in the background",
        "NSCameraUsageDescription": "KODA needs camera access for document verification"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#00C853"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.koda.driver",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "KODA needs your location to find nearby drivers and track trips"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1A1A2E"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
